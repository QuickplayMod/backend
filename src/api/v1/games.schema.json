  {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "$schema": {
        "type": "string"
      },
      "servers": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/Server"
        }
      },
      "conditions": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/$defs/ConditionStatement"
            }
          }
        }
      }
    },
    "additionalProperties": false,
    "$defs": {
      "Folder": {
        "type": "object",
        "properties": {
          "if": {
            "$ref": "#/$defs/ConditionStatement"
          },
          "elseMessage": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "identifier": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "children": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/Folder"
                }
              },
              {
                "$ref": "#/$defs/Sequence"
              }
            ]
          }
        },
        "required": ["name", "children", "identifier"],
        "additionalProperties": false
      },
      "Sequence": {
        "type": "object",
        "properties": {
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "if": {
                  "$ref": "#/$defs/ConditionStatement"
                },
                "action": {
                  "$ref": "#/$defs/Action"
                },
                "else": {
                  "$ref": "#/$defs/Action"
                }
              },
              "required": ["action"],
              "additionalProperties": false
            }
          }
        },
        "required": ["name", "steps"],
        "additionalProperties": false
      },
      "Condition": {
        "type": "object",
        "properties": {
          "property": {
            "enum": ["serverName", "serverType", "mode", "map", "lobbyName", "proxyName", "environment", "isInParty", "partyRole", "playerRank", "packageRank", "monthlyPackageRank"]
          },
          "state": {
            "enum": ["==", ">", ">=", "<", "<=", "!=", "contains", "notContains"]
          },
          "value": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "boolean"
              },
              {
                "type": "number"
              }
            ]
          }
        },
        "required": ["property", "state", "value"],
        "additionalProperties": false
      },
      "CompoundCondition": {
        "type": "object",
        "properties": {
          "gate": {
            "enum": ["&&", "||"]
          },
          "conditions": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/ConditionStatement"
            },
            "minItems": 1
          }
        },
        "required": ["gate", "conditions"],
        "additionalProperties": false
      },
      "ConditionReference": {
        "type": "object",
        "properties": {
          "ref": {
            "type": "string"
          },
          "invert": {
            "type": "boolean"
          }
        },
        "required": ["ref"],
        "additionalProperties": false
      },
      "ConditionStatement": {
        "oneOf": [
          {
            "$ref": "#/$defs/ConditionReference"
          },
          {
            "$ref": "#/$defs/CompoundCondition"
          },
          {
            "$ref": "#/$defs/Condition"
          }
        ]
      },
      "Action": {
        "type": "object",
        "properties": {
          "type": {
            "enum": ["command", "message"]
          },
          "value": {
            "type": "string"
          }
        },
        "required": ["type", "value"],
        "additionalProperties": false
      },
      "Server": {
        "type": "object",
        "properties": {
          "addressRegex": {
            "type": "string"
          },
          "games": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/Folder"
            }
          },
          "enabled":  {
            "type": "boolean"
          }
        },
        "required": ["addressRegex", "games", "enabled"],
        "additionalProperties": false
      }
    }
  }
